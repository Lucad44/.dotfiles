{
    "hyprland/workspaces": {
        "disable-scroll": false,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
            "1": " ", 
            "2": " ", 
            "3": "󰨞 ",
            "4": " ", 
            "5": "󰽴 ", 
            "6": "󰺷 ", 
            "default": " "
        },
        "on-click": "activate",
        "on-scroll-up": "hyprctl dispatch workspace e-1",
        "on-scroll-down": "hyprctl dispatch workspace e+1"
    },

    "hyprland/window": {
        "format": "{}",
        "separate-outputs": true,
        "on-click-right": "sleep .3 && ~/.config/hypr/resize.sh",
        "on-click-middle": "hyprctl dispatch killactive"
    },

    "custom/launcher": {
        "format": " ",
        "on-click": "wofi -W 18% -H 25% --location 1 --show drun",
        "on-click-middle": "wofi -W 25% -H 25% --location 1 --show calc",
        "on-click-right": "wofi -W 25% -H 25% --location 1 --show run",
        "tooltip": false
    },

    "cpu": {
        "interval": 1,
        "format": " {usage}%",
        "tooltip": false,
        "on-click-right": "kitty --class wm-floating --title all_is_kitty --hold --detach sh -c 'btop'"
    },

    "custom/temperature": {
        "interval": 1,
        "format": "{icon} {}",
        "exec": "$HOME/.config/waybar/scripts/cpu_temp.sh",
        "format-icons": ["", "", "", "", ""],
        "tooltip": false
    },


    "custom/gpu": {
        "interval": 1,
        "exec": "nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader,nounits",
        "format": "󰢮 {}%",
        "return-type": "",
        "on-click-right": "kitty --class wm-floating --title all_is_kitty --hold --detach sh -c 'nvidia-smi'"
    },

    "memory": {
        "interval": 2,
        "format": " {used}GB",
        "max-length": 30,
        "tooltip": true,
        "tooltip-format": " {used:0.1f}GB/{total:0.1f}GB",
        "on-click-right": "kitty --start-as=fullscreen --title all_is_kitty sh -c 'btop'"
    },

    "custom/updates": {
        "interval": 1800,
        "format": "󱧘 {}",
        "exec": "~/.config/waybar/scripts/arch_update.sh",
        "tooltip": true
    },

    "clock": {
        "interval": 1,
        "format": "  {:%H:%M}",
        "format-alt": "{:%A, %B %d, %Y %H:%M:%S } ",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
                    "mode"          : "month",
                    "weeks-pos"     : "right",
                    "on-scroll"     : 1,
                    "on-click-right": "mode",
                    "format": {
                              "months":     "<span color='#ffead3'><b>{}</b></span>",
                              "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                              "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                              "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                              "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
                              }
                    },
        "actions":  {
                    "on-click-right": "mode",
                    "on-click-forward": "tz_up",
                    "on-click-backward": "tz_down",
                    "on-scroll-up": "shift_up",
                    "on-scroll-down": "shift_down"
                    }
    },

    "custom/exit": {
        "format": "",
        "on-click": "$HOME/.config/waybar/scripts/run_power_menu.sh",
        "tooltip": false
    },

    "custom/weather": {
        "format": "{}",
        "on-click": "wpaperd",
        "tooltip": true,
        "restart-interval": 300,
        "exec": "$HOME/.config/waybar/scripts/waybar-wttr.py",
        "return-type": "json"
    },
    
    "network": {
        "interval": 1,
        "format": "{bandwidthDownBytes}",
        "format-wifi": "   {essid}",
        "format-ethernet": "󰈀  {ipaddr}/{cidr}",
        "format-disconnected": "󰤭",
        "tooltip-format": "󰈀 {ifname} via {gwaddri}",
        "tooltip-format-wifi": "   {essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "󰈀 {ifname} ({ipaddr}/{cidr})",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "on-click": "kitty --class wm-floating --title all_is_kitty --hold --detach sh -c 'nmtui'"
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": " ({volume}%)",
        "on-click": "pavucontrol -t 3",
        "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-click-middle": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ -1%",
        "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ +1%",
        "tooltip-format": "{desc}",
        "format-icons": {
            "default": ["", "", ""]
        }
    },

    "tray": {
        "icon-size": 15,
        "spacing": 15
    }
}
